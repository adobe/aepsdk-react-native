{
  "extends": "../../tsconfig.json",
  "jsx": "react-native",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "./src",
    "declaration": true,
    "preserveSymlinks": true,
    "target": "es6",
    "module": "NodeNext",
    "jsx": "react-native",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "lib": ["es6", "dom", "ES2021"],
    "esModuleInterop": true,
  },
  "include": ["src"],
  "exclude": ["__tests__", "dist", "node_modules", "**/*.spec.ts", "**/*.spec.tsx"]
}
